{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Link",
			"command": "gcc",
			"args": [
				"o/${workspaceFolderBasename}.o",
				
				"-static",
				"-o",
				"${workspaceFolderBasename}.exe",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
            },
			"dependsOn": [
				"Compile"
			],
		},

		{
			"type": "shell",
			"label": "Compile",
			"command": "gcc",
			"args": [
				"-Isrc",

				"-c",
				"src\\main.c",
			
				"-o",
				"o\\${workspaceFolderBasename}.o",

				"-g",

				"-Wall",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"dependsOn": [
				"Clear Console"
			]
		},

		{
			"type": "shell",
			"label": "Decode",
			"command": "objdump",
			"args": [
				"-D",
				
				"${workspaceFolder}\\out\\${workspaceFolderBasename}.o",

				">",
				"objfiledmp.txt"
			],
			"options": {
				"cwd": "${workspaceFolder}\\out"
			},
			"problemMatcher": [
				"$gcc"
			]
		}, 

		{
			"type": "shell",
			"label": "Clear Console",
			"command": "cls"
		}
	]
}