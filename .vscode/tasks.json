{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Link",
			"command": "g++",
			"args": [
				"o/${workspaceFolderBasename}.o",
				
				"-o",
				"${workspaceFolderBasename}.AppImage",
				"-lX11", 
				"-lGL",
				"-lpthread", 
				"-lpng", 
				//"-lstdc++f"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
            },
			"dependsOn": [
				"Compile"
			],
		},

		{
			"type": "shell",
			"label": "Compile",
			"command": "g++",
			"args": [
				"-Isrc",
				"-IGL",
				"-c",
				"src/main.cpp",
			
				"-o",
				"o/${workspaceFolderBasename}.o",

				"-g",
				"-std=c++17"
				//"-Wall",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"dependsOn": [
				"Clear Console" 
			]
		}
	]
}